    title ENCORE Auth
    block head
      link(rel="stylesheet", href="/style.css")
      script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.slim.js" integrity="sha256-KaSi3am04I2b10TZZ7JqEYrnNk94r0QOeIY3PtwGR/M=" crossorigin="anonymous")
  body
    .container
      block body
      br
        
      - var errors = req.flash('error')
      if errors
        each error in errors
          .alert.alert-danger
            div#message= error

      - var infos = req.flash('info')
      if infos
        each info in infos
          .alert.alert-info
            div#message= info

      - var successes = req.flash('success')
      if successes
        each success in successes
          .alert.alert-success
            div#message= success
